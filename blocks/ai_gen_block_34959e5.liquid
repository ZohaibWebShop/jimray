{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
   #shopify-section-{{ section.id }} {
    position: relative;
   background-image:radial-gradient(circle at 27% 33%, rgba(193, 193, 193,0.04) 0%, rgba(193, 193, 193,0.04) 50%,rgba(77, 77, 77,0.04) 50%, rgba(77, 77, 77,0.04) 100%),radial-gradient(circle at 35% 8%, rgba(183, 183, 183,0.04) 0%, rgba(183, 183, 183,0.04) 50%,rgba(25, 25, 25,0.04) 50%, rgba(25, 25, 25,0.04) 100%),radial-gradient(circle at 93% 50%, rgba(218, 218, 218,0.04) 0%, rgba(218, 218, 218,0.04) 50%,rgba(127, 127, 127,0.04) 50%, rgba(127, 127, 127,0.04) 100%),linear-gradient(90deg, hsl(116,0%,99%),hsl(116,0%,99%)); 
  }
  .ai-experience-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.section_background }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-experience-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-experience-image-column-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-experience-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-experience-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 500px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-experience-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-experience-content-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: {{ block.settings.content_gap }}px;
    padding: 40px;
  }

  .ai-experience-counter-block-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    justify-content: center;
    padding: 30px 40px;
    max-width:100%;
    overflow: visible;
    transition: transform 0.3s ease;
  }
  .ai-experience-counter-block-{{ ai_gen_id }}:before{
    content:"";
    position:absolute;
    width: 100%;
    height:100%;
    top:0px;
    background-color: RGBA(192,183,183,1); 
    clip-path: polygon(5% 0, 100% 0, 100% 75%, 95% 100%, 0 100%, 0 25%);
  }

  /* .ai-experience-counter-block-{{ ai_gen_id }}:hover {
    transform: translate({{ block.settings.counter_x_position }}px, {{ block.settings.counter_y_position }}px) scale(1.05);
  } */

  .ai-experience-counter-number-{{ ai_gen_id }} {
    position:absolute;
    left:50%;
    font-family:'Plus Jakarta Sans','sans-serif';
    transform: translate(-50%, {{ block.settings.counter_y_position }}px);
    font-size: {{ block.settings.counter_font_size }}px;
    font-weight: 700;
    color: {{ block.settings.counter_text_color }};
    line-height: 1;
    margin: 0;
    transition: transform 0.3s ease;
  }

  .ai-experience-counter-text-{{ ai_gen_id }} {
    font-family:'Plus Jakarta Sans','sans-serif';
    font-size: 32px;
    color: #333333;
    font-weight: 700;
    line-height:1;
    z-index:1;

    margin: 0;
    margin-top:20px;
    opacity: 1;
  }

  .ai-experience-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
    margin: 0;
    opacity: 0;
    transform: translateY(20px);
  }

  .ai-experience-heading-{{ ai_gen_id }}.ai-animate-in-{{ ai_gen_id }} {
    animation: ai-fade-up-{{ ai_gen_id }} 0.6s ease forwards;
  }

  .ai-experience-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
    opacity: 0;
    transform: translateY(20px);
  }

  .ai-experience-text-{{ ai_gen_id }}.ai-animate-in-{{ ai_gen_id }} {
    animation: ai-fade-up-{{ ai_gen_id }} 0.6s ease 0.2s forwards;
  }

  .ai-experience-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    align-self: flex-start;
    opacity: 0;
    transform: translateY(20px);
  }

  .ai-experience-button-{{ ai_gen_id }}.ai-animate-in-{{ ai_gen_id }} {
    animation: ai-fade-up-{{ ai_gen_id }} 0.6s ease 0.4s forwards;
  }

  .ai-experience-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  @keyframes ai-fade-up-{{ ai_gen_id }} {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes ai-counter-pulse-{{ ai_gen_id }} {
    0%, 100% {
      transform: translate({{ block.settings.counter_x_position }}px, {{ block.settings.counter_y_position }}px) scale(1);
    }
    50% {
      transform: translate({{ block.settings.counter_x_position }}px, {{ block.settings.counter_y_position }}px) scale(1.02);
    }
  }

  .ai-experience-counter-block-{{ ai_gen_id }} .ai-experience-counter-text {
    animation: ai-counter-pulse-{{ ai_gen_id }} 2s ease-in-out infinite;
  }

  @media screen and (max-width: 749px) {
    .ai-experience-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-experience-content-column-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-experience-image-placeholder-{{ ai_gen_id }} {
      min-height: 300px;
    }

    .ai-experience-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-experience-counter-number-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.counter_font_size }}px * 0.7);
    }

    .ai-experience-counter-block-{{ ai_gen_id }} {
      padding: 20px 30px;
    }
  }
{% endstyle %}

<experience-section-{{ ai_gen_id }}
  class="ai-experience-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-experience-container-{{ ai_gen_id }}">
    <div class="ai-experience-image-column-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1200 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-experience-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-experience-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-experience-content-column-{{ ai_gen_id }}">
      <div
        class="ai-experience-counter-block-{{ ai_gen_id }}"
        data-counter-target="{{ block.settings.counter_number }}"
      >
        <div class="ai-experience-counter-number-{{ ai_gen_id }}">0+</div>
        <div class="ai-experience-counter-text-{{ ai_gen_id }}">{{ block.settings.counter_label }}</div>
      </div>

      {% if block.settings.heading != blank %}
        <h2 class="ai-experience-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-experience-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-experience-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</experience-section-{{ ai_gen_id }}>

<script>
  (function() {
    class ExperienceSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.counterBlock = this.querySelector('.ai-experience-counter-block-{{ ai_gen_id }}');
        this.counterNumber = this.querySelector('.ai-experience-counter-number-{{ ai_gen_id }}');
        this.heading = this.querySelector('.ai-experience-heading-{{ ai_gen_id }}');
        this.text = this.querySelector('.ai-experience-text-{{ ai_gen_id }}');
        this.button = this.querySelector('.ai-experience-button-{{ ai_gen_id }}');
        this.hasAnimated = false;
      }

      connectedCallback() {
        this.setupIntersectionObserver();
      }

      setupIntersectionObserver() {
        const options = {
          threshold: 0.2,
          rootMargin: '0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting && !this.hasAnimated) {
              this.hasAnimated = true;
              this.animateContent();
            }
          });
        }, options);

        observer.observe(this);
      }

      animateContent() {
        this.animateCounter();
        
        if (this.heading) {
          this.heading.classList.add('ai-animate-in-{{ ai_gen_id }}');
        }
        
        if (this.text) {
          this.text.classList.add('ai-animate-in-{{ ai_gen_id }}');
        }
        
        if (this.button) {
          this.button.classList.add('ai-animate-in-{{ ai_gen_id }}');
        }

        setTimeout(() => {
          if (this.counterBlock) {
            this.counterBlock.classList.add('ai-pulse-{{ ai_gen_id }}');
          }
        }, 1000);
      }

      animateCounter() {
        const target = parseInt(this.counterBlock.dataset.counterTarget) || 40;
        const duration = 2000;
        const steps = 60;
        const increment = target / steps;
        const stepDuration = duration / steps;
        let current = 0;

        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            current = target;
            clearInterval(timer);
          }
          this.counterNumber.textContent = Math.floor(current) + '+';
        }, stepDuration);
      }
    }

    customElements.define('experience-section-{{ ai_gen_id }}', ExperienceSection{{ ai_gen_id }});
  })();
</script>

