{% style %}
  .ai-product-grid-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-product-grid-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: {{ block.settings.title_spacing }}px;
    gap: 20px;
  }

  .ai-product-grid-header-content-{{ ai_gen_id }} {
    flex: 1;
    text-align: {{ block.settings.title_alignment }};
  }

  .ai-product-grid-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: {{ block.settings.section_title_weight }};
    color: {{ block.settings.section_title_color }};
    margin: 0 0 {{ block.settings.subtitle_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-product-grid-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_subtitle_size }}px;
    color: {{ block.settings.section_subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-product-grid-view-all-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .ai-product-grid-view-all-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateX(4px);
  }

  .ai-product-grid-view-all-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .ai-product-grid-view-all-{{ ai_gen_id }}:hover .ai-product-grid-view-all-icon-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  .ai-product-grid-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    width: 100%;
  }

  @media screen and (max-width: 989px) {
    .ai-product-grid-container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_tablet }}, 1fr);
    }

    .ai-product-grid-header-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
    }

    .ai-product-grid-header-content-{{ ai_gen_id }} {
      text-align: left;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-grid-container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap_mobile }}px;
    }

    .ai-product-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.section_title_size | times: 0.7 }}px;
    }

    .ai-product-grid-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.section_subtitle_size | times: 0.9 }}px;
    }

    .ai-product-grid-view-all-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }

  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_lift | times: 2 }}px {{ block.settings.hover_lift | times: 4 }}px {{ block.settings.card_shadow_color }};
    border-color: {{ block.settings.card_border_hover_color }};
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: {{ block.settings.image_background }};
  }

  .ai-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: fill;
    transition: transform 0.5s ease, opacity 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.image_zoom_scale }});
    opacity: {{ block.settings.image_hover_opacity }};
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.image_background }};
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-info-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin }}px 0;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_hover_color }};
  }

  .ai-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: {{ block.settings.description_lines }};
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-product-empty-state-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.description_color }};
  }

  .ai-product-empty-state-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  @keyframes ai-fade-in-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ai-product-card-{{ ai_gen_id }} {
    animation: ai-fade-in-{{ ai_gen_id }} 0.6s ease forwards;
    opacity: 0;
  }

  {% for i in (1..20) %}
    .ai-product-card-{{ ai_gen_id }}:nth-child({{ i }}) {
      animation-delay: {{ i | minus: 1 | times: 0.1 }}s;
    }
  {% endfor %}
{% endstyle %}

<product-grid-{{ ai_gen_id }} class="ai-product-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.section_title != blank or block.settings.section_subtitle != blank or block.settings.show_view_all %}
    <div class="ai-product-grid-header-{{ ai_gen_id }}">
      <div class="ai-product-grid-header-content-{{ ai_gen_id }}">
        {% if block.settings.section_title != blank %}
          <h2 class="ai-product-grid-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
        {% endif %}
        {% if block.settings.section_subtitle != blank %}
          <p class="ai-product-grid-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
        {% endif %}
      </div>
      
      {% if block.settings.show_view_all and block.settings.collection != blank %}
        <a href="{{ block.settings.collection.url }}" class="ai-product-grid-view-all-{{ ai_gen_id }}">
          {{ block.settings.view_all_text }}
          <svg class="ai-product-grid-view-all-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-product-grid-container-{{ ai_gen_id }}">
    {% if block.settings.collection != blank %}
      {% assign products_to_show = block.settings.products_per_page %}
      {% for product in block.settings.collection.products limit: products_to_show %}
        <a href="{{ product.url }}" class="ai-product-card-{{ ai_gen_id }}">
          <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-product-image-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="600"
              >
            {% else %}
              <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          
          <div class="ai-product-info-{{ ai_gen_id }}">
            <h3 class="ai-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            
            {% if product.metafields.custom.short_description != blank %}
              <p class="ai-product-description-{{ ai_gen_id }}">
                {{ product.metafields.custom.short_description }}
              </p>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    {% else %}
      <div class="ai-product-empty-state-{{ ai_gen_id }}">
        {{ 'collection-1' | placeholder_svg_tag }}
        <p>Select a collection to display products</p>
      </div>
    {% endif %}
  </div>
</product-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.cards = this.querySelectorAll('.ai-product-card-{{ ai_gen_id }}');
        this.setupInteractions();
      }

      setupInteractions() {
        this.cards.forEach((card) => {
          card.addEventListener('mouseenter', function() {
            this.style.zIndex = '10';
          });

          card.addEventListener('mouseleave', function() {
            this.style.zIndex = '1';
          });
        });
      }
    }

    customElements.define('product-grid-{{ ai_gen_id }}', ProductGrid{{ ai_gen_id }});
  })();
</script>

